<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_up"
            style="@style/small_button"
            android:text="上移" />
        <Button
            android:id="@+id/bt_down"
            style="@style/small_button"
            android:text="下移"/>
        <Button
            android:id="@+id/bt_left"
            style="@style/small_button"
            android:text="左移"/>
        <Button
            android:id="@+id/bt_right"
            style="@style/small_button"
            android:text="右移"/>
    </LinearLayout>

    <com.tcl.example.com.tcl.dejun.xie.testScrollMethod.ViewGroupOutside
        android:id="@+id/viewgroup_out"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red">
        <com.tcl.example.com.tcl.dejun.xie.testScrollMethod.ViewGroupInside
            android:id="@+id/viewgroup_in"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@color/blue"
            android:layout_gravity="center">
            <com.tcl.example.com.tcl.dejun.xie.testScrollMethod.TestTextView
                android:id="@+id/tv_center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:text="android"
                android:gravity="center"
                android:background="@color/green"
                />
        </com.tcl.example.com.tcl.dejun.xie.testScrollMethod.ViewGroupInside>

    </com.tcl.example.com.tcl.dejun.xie.testScrollMethod.ViewGroupOutside>

</LinearLayout>