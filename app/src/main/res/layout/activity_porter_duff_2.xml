<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:porterDuffView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.tcl.example.com.tcl.dejun.xie.PorterDuffDemo.PorterDuffView_2
        android:id="@+id/iv_scratch"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        porterDuffView:src="@drawable/thank_you"
        android:layout_marginTop="30dp"/>

    <com.tcl.example.com.tcl.dejun.xie.PorterDuffDemo.PorterDuffView_3
        android:id="@+id/iv_tear_clothes"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        porterDuffView:src="@drawable/girl_2"
        android:layout_marginTop="30dp"/>
</LinearLayout>