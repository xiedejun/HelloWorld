<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:porterDuffView="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tcl.example.com.tcl.dejun.xie.PorterDuffDemo.PorterDuffView
        android:id="@+id/porter_duff_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        porterDuffView:src="@drawable/src_img"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <Button
            android:id="@+id/bt_round_rect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/round_rect"/>
        <Button
            android:id="@+id/bt_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/circle"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_below"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </FrameLayout>


</LinearLayout>