<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="myProgressBar">
        <attr name="roundColor" format="color"/>
        <attr name="roundProgressColor" format="color"/>
        <attr name="backgroudColor" format="color"/>
        <attr name="innerCircle" format="dimension"/>
        <attr name="ringWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="custom_SwitchButton">

        <!-- Drawable to use as the "thumb" that switches back and forth. -->
        <attr name="custom_thumb" format="reference" />
        <!-- Drawable to use as the "track" that the switch thumb slides within. -->
        <attr name="custom_track" format="reference" />
        <!-- Text to use when the switch is in the checked/"on" state. -->
        <attr name="custom_textOn" format="string" />
        <!-- Text to use when the switch is in the unchecked/"off" state. -->
        <attr name="custom_textOff" format="string" />
        <!-- Amount of padding on either side of text within the switch thumb. -->
        <attr name="custom_thumbTextPadding" format="dimension" />
        <!-- TextAppearance style for text displayed on the switch thumb. -->
        <attr name="custom_switchTextAppearance" format="reference" />
        <!-- Minimum width for the switch component -->
        <attr name="custom_switchMinWidth" format="dimension" />
        <!-- Minimum space between the switch and caption text -->
        <attr name="custom_switchPadding" format="dimension" />
    </declare-styleable>
    
    <declare-styleable name="myCircle">
        <attr name="rotation" format="string"/>
    </declare-styleable>

    <declare-styleable name="SwipyRefreshLayout">
        <attr name="direction">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
            <enum name="both" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="porterDuffView">
        <attr name="src" format="integer"/>
        <attr name="android:layout_width"/>
        <attr name="android:layout_height"/>
    </declare-styleable>
</resources>